<h2>
  <nav>
    <%= link_to '<i class="fa fa-plus-circle"></i>'.html_safe, new_admin_user_path, title: 'Créer un nouvel utilisateur' %>
  </nav>
  Liste des utilisateurs
</h2>

<table class="sortable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Statut</th>
      <th>Rôle</th>
      <!-- <th>Date d'inscription</th> -->
      <% if current_user.admin? %>
      <th data-orderable="false"></th>
      <% end %>
      <th data-orderable="false"></th>
      <th data-orderable="false"></th>
      <th data-orderable="false"></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><span class="badge"><%= user.id %></span></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= t("user.statuses.#{user.status}") %></td>
      <td><%= t("user.roles.#{user.role}") %></td>
      <!-- <td><%= l(user.created_at) %></td> -->
      <td class="action"><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_user_path(user), title: "Détails" %></td>
      <td class="action"><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_user_path(user), title: "Éditer" %></td>
      <% if current_user.admin? %>
      <td class="action"><%= link_to '<i class="fa fa-lock" aria-hidden="true"></i>'.html_safe, admin_user_password_path(user), title: "Changer son mot de passe" %></td>
      <% end %>
      <td class="action"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_user_path(user), method: :delete, data: { confirm: "Cette action est irréversible, êtes vous sur de vouloir supprimer l'utilisateur #{user.id} (#{t("user.roles.#{user.role}")}) ?" }, title: "Supprimer" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

