<h2>
    <span class="id"><%= @user.id %></span> Changement de mot de passe pour <em><%= @user.email %></em>
</h2>

<%= simple_form_for @user, url: admin_user_password_path(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= link_to 'Annuler', admin_user_path(@user), class: 'btn btn-default' %>
    <%= f.button :submit %>
  </div>
<% end %>
