<h2>
  <nav>
    <%= link_to '<i class="fa fa-pencil-square"></i>'.html_safe, edit_admin_user_path(@user), title: "Éditer" %>
    <%= link_to '<i class="fa fa-th-list"></i>'.html_safe, admin_users_path, title: "Retour à la liste" %>
  </nav>
  <span class="id"><%= @user.id %></span> Utilisateur <em><%= @user.email %></em>
</h2>
<dl class="dl-horizontal borderd-list">
  <dt>Prénom</dt>
  <dd><%= @user.first_name %></dd>
  <dt>Nom</dt>
  <dd><%= @user.last_name %></dd>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>
  <dt>Rôle</dt>
  <dd><%= t("user.roles.#{@user.role}") %></dd>
  <dt>Statut</dt>
  <dd><%= t("user.statuses.#{@user.status}") %></dd>
</dl>
