<%= simple_form_for @partner, url: url = (@partner.new_record?) ? admin_partners_path : admin_partner_path(@partner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name  %>
    <%= f.input :resource_id, as: :select, wrapper_html: { class: 'test' } do  %>
      <select class="form-control select optional select2" data-template="image" name="partner[resource_id]" id="partner_resource_id">
        <option value=""></option>
        <% Resource.global.each do |resource| %>
          <%= content_tag :option, resource.name || resource.handle_identifier, {value: resource.id, selected: (resource.id == @partner.resource_id) ? true : nil, data: {img: resource.thumb_url}} %>
        <% end %>
      </select>
    <% end %>
    <%= f.input :notes %>
    <% if @users.present? %>
    <hr />
    <h3>RÃ©glages</h3>
    <%= f.input :user_id, collection: @users.collect { |u| [u.real_name, u.id] }, include_blank: false %>
    <% end %>
  </div>
  <hr />
  <div class="form-actions">
    <%= link_to 'Annuler', url, class: 'btn btn-default' %>
    <%= f.button :submit, 'Enregistrer' %>
  </div>
<% end %>
