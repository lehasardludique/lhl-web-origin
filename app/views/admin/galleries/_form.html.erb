<%= simple_form_for @gallery, url: (@gallery.new_record?) ? admin_galleries_path : admin_gallery_path(@gallery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, collection: @users.collect { |u| [u.real_name, u.id] }, include_blank: false if @users.present? %>
    <%= f.input :name %>
    <%= f.input :category, collection: Gallery.categories.collect { |s| [t("gallery.categories.#{s.first}"), s.first] }, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= link_to 'Annuler', admin_galleries_path, class: 'btn btn-default' %>
    <%= f.button :submit, 'Enregistrer' %>
  </div>
<% end %>
