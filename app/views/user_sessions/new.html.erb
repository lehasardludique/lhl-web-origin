<div id="page">
    <%= minimal_form_for @user, url: login_path do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, placeholder: "Votre email" %>
        <%= f.input :password, placeholder: "Votre mot de passe" %>
        <%= f.input :remember, as: :boolean, checked_value: true, unchecked_value: false, label: "Se souvenir de moi" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'connexion', class: 'btn-white', value: "Se Connecter" %>
      </div>
    <% end %>
</div>